@model IEnumerable<Villa_WEB.Models.Dto.VillaNumberDTO>
</br>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary">
                <i class="bi bi-patch-plus-fill"></i> Add
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Villa Name</th>
                <th>Villa Number</th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Villa.Name</td>
                    <td>@i.VillaNo</td>

                    <td>
                        <a asp-controller="VillaNumber" asp-route-villaNo="@i.VillaNo" asp-action="UpdateVillaNumber" class="btn btn-outline-success">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-controller="VillaNumber" asp-route-villaNo="@i.VillaNo" asp-action="DeleteVillaNumber" class=" btn btn-danger">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

