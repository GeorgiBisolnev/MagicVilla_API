@model IEnumerable<Villa_WEB.Models.Dto.VillaDTO>
</br>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla"  class="btn btn-outline-primary">
                <i class="bi bi-patch-plus-fill"></i> Add </a>
        </div>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach(var i in Model)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.Occupancy</td>
                    <td>@i.Rate.ToString()</td>
                    <td>
                        <a asp-controller="Villa" asp-route-villaId="@i.Id" asp-action="UpdateVilla" class="btn btn-outline-success">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-controller="Villa" asp-route-villaId="@i.Id" asp-action="DeleteVilla" class=" btn btn-danger">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

